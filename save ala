<span class="price">
<div>
  <span class="current">$${priceitemminicart}</span>
  <span class="fly-item"><span>2X</span></span>
</div>
</span>
</div>
<a href="#" class="item-remove closeminicart">
<i class="ri-close-line"></i></a>
</li>
`;
// ***
if (eo.target.classList=="ri-heart-line") {

  if (checkheart.innerHTML=="Not Products favorite found Yet !!! <br>") {
    checkheart.innerHTML = ourheartitem;
  
  }else{
    checkheart.innerHTML += ourheartitem;
  }
}

eo.target.classList.toggle("primary-color");

if (eo.target.classList=="ri-heart-line primary-color") {
  // all hearts clicked
console.log(ourheart)
// src image for imaged that clicked
console.log(srcitemminicart)

  const favitemsminicart=document.querySelectorAll(".favitems img");
  console.log(favitemsminicart)

favitemsminicart.forEach(item => {
// mini cart favorate elements
let hisrc=item.src;
console.log(hisrc)

if (hisrc == srcitemminicart) {
console.log(  item.querySelector("srcitemminicart"))
// console.log("hggggggggggggggggggggggggggggggggg")
//   // .remove();
// // item.parentElement.parentElement.parentElement.style.display="none";

  // if (checkheartitems.length=="") {
