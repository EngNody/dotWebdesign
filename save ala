const favnumber=document.querySelector(".item-number-heart");
const checkheart=document.querySelector(".contentheart")
const checkheartitems=document.querySelectorAll(".contentheart .item")
console.log(checkheartitems)
const ourheart=document.querySelectorAll(".item .hoverable li i.ri-heart-line")

// ================== chang number items==========================================
